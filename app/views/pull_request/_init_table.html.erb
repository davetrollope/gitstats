<% if locals[:checkboxes] %>
    <script type="text/javascript">
        $('input[type=checkbox]').click(function(event) {event.stopPropagation()});
    </script>
<% end %>

<script type="text/javascript">
    $(document).ready(function(){
        $('#<%= locals[:table_name] %>').DataTable({
            fixedHeader: true,
            bInfo : false,
            colReorder: true,
            rowReorder: true,
            responsive: true,
            "bPaginate": false
        });
    });
</script>